h1 Admin
.well.well-sm
	form(name="userForm" novalidate ng-submit="admin.submitForm(userForm)")
		.form-group
			label(for="user") User:
			input#user.form-control(type="text" ng-model="user" placeholder="Enter name" required)
		.form-group
			button.btn.btn-default(type="submit") Submit

table.table.table-bordered
	thead
		tr
			th Name
			th Date
	tbody
		tr(ng-repeat="user in users")
			td(ng-bind="user.name")
			td(ng-bind="user.created")

hr
