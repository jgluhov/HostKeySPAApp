h1 Admin
.well.well-sm
	form(name="userForm" novalidate ng-submit="admin.createItem(userForm, 'users', user)")
		.form-group
			label(for="user") User:
			input#user.form-control(type="text" ng-model="user.name" placeholder="Enter name" required)
		.form-group
			.row
				.col-xs-6.col-md-4
					label(for="city") City:
					ui-select(ng-model='user.city')
						ui-select-match.ui-select-match(placeholder='Select city')
							span(ng-bind='$select.selected.name')
						ui-select-choices.ui-select-choices(repeat='city in cities')
							span(ng-bind='city.name')
				.col-xs-6.col-md-4
					label(for="institution") Institution:
					ui-select(ng-model='user.institution')
						ui-select-match.ui-select-match(placeholder='Select institution')
							span(ng-bind='$select.selected.name')
						ui-select-choices.ui-select-choices(repeat='institution in institutions')
							span(ng-bind='institution.name')
		.form-group
			button.btn.btn-default(type="submit") Submit

table.table.table-bordered
	thead
		tr
			th Name
			th Date
			th Actions
	tbody
		tr(ng-repeat="user in users")
			td(ng-bind="user.name")
			td(ng-bind="user.created")
			td
				button.btn.btn-default(ng-click="admin.deleteItem('users', user)")
					i.glyphicon.glyphicon-trash

